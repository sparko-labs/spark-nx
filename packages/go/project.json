{
  "name": "go",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/go/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/go",
        "main": "packages/go/src/index.ts",
        "tsConfig": "packages/go/tsconfig.lib.json",
        "assets": [
          "packages/go/*.md",
          {
            "input": "./packages/go/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/go/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/go",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/go",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/go/**/*.ts", "packages/go/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/go/jest.config.ts"
      }
    }
  },
  "tags": []
}
